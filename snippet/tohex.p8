?'** [tohex] display numbers \n 			in hexadecimal **',7

local values={
	12,0x12,-999,0
	,'0xf','0x010f','100','-20'
}

for d=0,4 do
	?'\#b d='..d..'',d*24,16,7
	for i,v in pairs(values) do
		?tohex(v,d),d*24,8*i+16,6
	end
end

